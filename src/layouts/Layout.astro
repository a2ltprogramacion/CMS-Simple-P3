// src/layouts/Layout.astro
// Versión: 3.3 | CORRECCIÓN: Contraste y texto de botones de footer, fix de tooltip CSS, texturas aumentadas.
// Versión: 3.2 | Refactor: Footer unificado con impacto (Oscuro, Texturizado, CTA Integrado)
// Versión: 3.1 | Corrección: Textura CSS, Animación Estrellas
// Versión: 2.3 | CORRECCIÓN DE SINTAXIS

import '~/styles/global.css';
import Header from '~/components/Header.astro';
import { getEntry } from 'astro:content';
import { mdToHtml } from '~/utils/markdown'; 

export interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
const gaId = import.meta.env.PUBLIC_GA_ID || 'G-XXXXXX';
// --- Carga de Datos ---
const ajustes = await getEntry('ajustes', 'home');
const contacto = await getEntry('informacion-de-contacto', 'general');
const footerNav = await getEntry('footer_navigation', 'main');

const brand_name = ajustes?.data.brand_name ?? 'Elevawod';
const c = contacto?.data ?? {};
const social = c.social_media ?? {};

const navColumns = footerNav?.data.columns ??
[
  { title: "Navegación", links: [{ text: "Inicio", url: "/" }] }
];

const waNumber = c.whatsapp ?? '';
const waMsg = encodeURIComponent(c.whatsapp_message ?? 'Hola, deseo cotizar.');
const waHref = waNumber ? `https://wa.me/${waNumber}?text=${waMsg}` : null;

const renderedAddressHtml = mdToHtml(c.address ?? "");
// V3.2: Títulos de CTA ya no se usan en el layout (se usan en el footer ahora)
// const contactHeadingHtml = mdToHtml(c.contact_heading ?? '¿Empezamos?');
// const contactSubheadingHtml = mdToHtml(c.contact_subheading ?? 'Decide: WhatsApp para una respuesta más rápida o envíame un correo.');
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content={brand_name} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Space+Grotesk:wght@700&display=swap" rel="stylesheet">

		{gaId !== 'G-XXXXXX' && (
			<>
				<script async src={`https://www.googlETagmanager.com/gtag/js?id=${gaId}`}></script>
				<script is:inline>
					window.dataLayer = window.dataLayer || [];
					function gtag(){dataLayer.push(arguments);}
					gtag('js', new Date());
					gtag('config', '{gaId}');
				</script>
			</>
		)}
  </head>
  
  <body class="text-text-base font-sans bg-primary relative">

		<Header />
		
    <main class="w-full relative z-10">
			<slot />
		</main>
		
    {/* --- Elementos Flotantes --- */}
    {waHref && (
			<a 
        href={waHref} target="_blank" rel="noopener noreferrer" class="floating-whatsapp" aria-label="Contactar por WhatsApp">
