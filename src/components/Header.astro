// src/components/Header.astro
// Versión: 1.0
import { getEntry } from 'astro:content';

// --- Carga de datos del CMS ---
const contacto = await getEntry('informacion-de-contacto', 'general');
const ajustes = await getEntry('ajustes', 'home');
const home = await getEntry('pages', 'home');

const c = contacto?.data ?? {};
const brandName = ajustes?.data.brand_name ?? 'Elevawod';
const homeData = home?.data ?? {};

// --- Lógica de WhatsApp ---
const waNumber = c.whatsapp ?? '';
const waMsg = encodeURIComponent(c.whatsapp_message ?? 'Hola, quiero más información.'); 
const waHref = waNumber ? `https://wa.me/${waNumber}?text=${waMsg}` : null;

// --- Navegación Dinámica ---
const allLinks = [
  { href: "/#inicio", text: "Inicio", key: "hero" }, 
  { href: "/#nosotros-productos", text: "Nosotros", key: "nosotros" }, 
  { href: "/proyectos", text: "Portafolio", key: "proyectos_page" },
  { href: "/#lo-ultimo", text: "Lo Último", key: "proyectos" },
  { href: "/#clientes", text: "Clientes", key: "clientes" },
];

const navLinks = allLinks.filter(link => {
  // 1. Si no es un ancla del home, mostrar siempre
  if (!link.href.startsWith('/#')) return true;

  // 2. Verificar visibilidad en CMS
  const sectionConfig = (homeData as any)[link.key];
  
  // Si la sección no existe o no tiene propiedad explícita, mostrar por defecto
  if (!sectionConfig || typeof sectionConfig.show_section !== 'boolean') {
    return true; 
  }
  
  // 3. Ocultar solo si show_section es false
  return sectionConfig.show_section;
});
---

<header id="main-header" class="fixed top-0 left-0 right-0 w-full z-50 transition-all duration-300 ease-in-out bg-primary/0" data-scroll-header> 
  <div class="container lg:w-[95%] 2xl:w-[80%] mx-auto flex justify-between items-center p-0 md:p-4">
    
    {/* Logo */}
    <a href="/" class="ml-5 sm:ml-0 no-underline hover:no-underline mt-5 block">
      <img class="max-h-16 md:max-h-24 object-contain" src="/assets/uploads/Logo-transparente-text.png" alt={brandName} />
    </a>

    {/* Navegación Escritorio */}
    <nav class="hidden lg:flex items-center space-x-6 mr-5 md:mr-32"> 
      {navLinks.map(link => 
        <a href={link.href} class="text-white font-bold font-sans submenu-link inline-block no-underline hover:no-underline text-lg"> 
          {link.text}
        </a>
      )}
      {waHref && (
        <a href={waHref} target="_blank" rel="noopener noreferrer" class="bg-accent text-primary font-bold py-2 px-4 hover:bg-white hover:text-accent border-2 border-accent no-underline hover:no-underline transition-colors duration-300 rounded-sm">
          Contacto
        </a>
      )}
    </nav>

    {/* Botón Móvil */}
    <button id="mobile-menu-button" class="block lg:hidden text-white z-60 mr-5 sm:mr-0" aria-label="Abrir menú"> 
      <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
    </button>
  </div>

  {/* Menú Móvil */}
  <div id="mobile-menu" class="fixed top-0 right-0 w-72 h-screen bg-primary/95 backdrop-blur-md flex flex-col items-start justify-start py-8 px-6 transform translate-x-full transition-transform duration-300 ease-in-out z-80 shadow-2xl">
    <div class="flex justify-between items-center w-full mb-8">
      <span class="text-white text-xl font-bold font-serif">Menú</span> 
      <button id="close-mobile-menu" class="text-white p-2" aria-label="Cerrar menú">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>
    
    <div class="flex flex-col w-full space-y-4">
      {navLinks.map(link => 
        <a href={link.href} class="text-white text-xl font-sans mobile-link w-full py-3 border-b border-white/10 hover:text-accent transition-colors">
          {link.text}
        </a>
      )}
    </div>

    {waHref && (
      <a href={waHref} target="_blank" rel="noopener noreferrer" class="bg-accent text-primary font-bold py-3 px-6 text-lg mt-auto w-full text-center rounded-sm hover:bg-white transition-colors">
        Escríbenos
      </a>
    )}
  </div>
</header>

<style>
.submenu-link {
  position: relative;
  transition: transform 0.2s ease;
}
.submenu-link:hover {
  transform: scale(1.05);
}
.submenu-link::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: theme('colors.accent');
  transform: scaleX(0);
  transform-origin: bottom left; 
  transition: transform 0.3s ease-out;
}
.submenu-link:hover::after {
  transform: scaleX(1);
} 
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const closeMobileMenuButton = document.getElementById('close-mobile-menu');
    const header = document.getElementById('main-header');
    
    // 1. Lógica Menú Móvil
    if (mobileMenuButton && mobileMenu) {
      const toggleMenu = (show: boolean) => {
        if (show) mobileMenu.classList.remove('translate-x-full');
        else mobileMenu.classList.add('translate-x-full');
      };

      mobileMenuButton.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleMenu(true);
      });

      if (closeMobileMenuButton) {
        closeMobileMenuButton.addEventListener('click', () => toggleMenu(false));
      }

      // Cerrar al hacer click en un link
      mobileMenu.querySelectorAll('.mobile-link').forEach(link => { 
        link.addEventListener('click', () => toggleMenu(false));
      });

      // Cerrar al hacer click fuera
      document.addEventListener('click', (e) => {
        const target = e.target as Node;
        if (!mobileMenu.contains(target) && !mobileMenuButton.contains(target)) {
          toggleMenu(false);
        }
      });
    }

    // 2. Lógica Scroll Header (Opacidad)
    if (header) {
        const handleScroll = () => {
            if (window.scrollY > 50) {
                header.classList.remove('bg-primary/0');
                header.classList.add('bg-primary/95', 'shadow-lg', 'backdrop-blur-sm');
            } else {
                header.classList.remove('bg-primary/95', 'shadow-lg', 'backdrop-blur-sm');
                header.classList.add('bg-primary/0');
            }
        };
        window.addEventListener('scroll', handleScroll);
        handleScroll(); // Init
    }
  });
</script>